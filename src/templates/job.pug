template#jobPage
  .container
    ul.content
      li.gotop
        a(href='javascript:;')
      li.map
        ul
          li.info
            | {{status}}
            span.info_job
              span(style='font-size:32px;') 後端工程師
              br
              | 在新北市共有
              span(style='color:#ff7900') {{jobCount}}
              |  個職缺
          li.chart
            .chart_title
              | 生活指數表
              span
                img(src='images/dot-orange.png')
                | 該區各項指數   
                img(src='images/dot-blue.png')
                | 全台平均
            canvas#canvas(height='300', width='600')
      li.job_title 職缺列表
      li.job(v-for='job in jobList')
        ul
          li.title {{job.JOB}}
          li.des {{job.NAME}}
          li.des
            span {{job.ADDR_NO_DESCRIPT}}
            span &nbsp;|&nbsp;
            span {{job.PERIOD}}年經驗
            span &nbsp;|&nbsp;
            span 薪水{{job.SAL_MONTH_LOW}}
          li.yaya
            span 不加班
            span 氣氛和諧
            span 獎金制度優
          li.love
            a(href='javascript:;')
              span.loveyes
            a(href='javascript:;')
              span.loveyno
          li.apply
            a(href='javascript:;') 我要應徵
      li.pagenum
        table(border='0', align='center', cellpadding='0', cellspacing='0')
          tr
            td.btnleftpage(width='10%')
              a(href='#', title='回上一列') 回上一列
            td.btnleft(width='10%')
              a(href='#', title='回上頁') 回上頁
            td(width='60%', align='center')
              a.on(title='第1頁') 1
              a(href='#', title='第2頁') 2
              a(href='#', title='第3頁') 3
              a(href='#', title='第4頁') 4
              a(href='#', title='第5頁') 5
            td.btnright(width='10%')
              a(href='#', title='到下頁') 到下頁
            td.btnrightpage(width='10%')
              a(href='#', title='到下一列') 到下一列
